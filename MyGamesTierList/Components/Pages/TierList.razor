@page "/TierList"
@inject IStateManager StateManager
@inject DragAndDropService dragAndDropService
@rendermode InteractiveServer

<h1>My SteamGames Tier List <button @onclick="@Reset" type="button" class="btn btn-danger" style="float:right">Reset</button> </h1>

<div style="clear:both"></div>

<div class="tier-list">
    @for (int i = 0; i < StateManager.Tiers.Count; i++)
    {
        <MyGamesTierList.Components.TierList.TierListBox TierPosition="@i" />
    }
</div>

<div class="game-list">
    <MyGamesTierList.Components.TierList.GamesList />
</div>

@code {
    public void Reset()
    {
        StateManager.Reset();
    }
}
